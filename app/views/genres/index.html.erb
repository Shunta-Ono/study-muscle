<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h2>部位一覧</h2>
    </div>
    <div class="col-xs-offset-5 col-xs-3">
      <%= form_tag(search_muscles_path, :method => 'get' ) do %>
      <%= text_field_tag :search, '', placeholder: "筋肉名を入力" %>
      <%= submit_tag '検索する', :name => nil, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <% @genres.each do |genre| %>
  <%= link_to muscles_path(genre_id: genre.id) do %>
  <div class="genre-card">
    <%= attachment_image_tag genre, :image, :size => '250x250' %>
    <div class="genre-card-info text-center">
      <p class="genre-card-name"><%= "部位：#{genre.name}" %></p>
    </div>
  </div>
  <% end %>
  <% end %>
</div>

