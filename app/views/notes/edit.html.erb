<div class="container">
  <div class="row">
    <div>
      <%= link_to "<<戻る", :back %>
    </div>
    <div class="heading-title text-center">
      <h2 class="heading-style">ノートを編集する</h2>
      <h3>Edit Note</h3>
    </div>
    <div class="col-xs-offset-1 col-xs-10">
      <%= form_for (@note) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group form-width">
          <%= f.label :tile, 'タイトル' %>
          <%= f.text_field :title, class: "form-control note-title-form" %>
        </div>
        <div class="form-group form-width">
          <%= f.label :name, '筋肉名' %>
          <%= f.text_field :name, class: "form-control note-title-form" %>
        </div>
      <div class="form-group">
        <%= f.label :body, '内容' %><span>
        （語呂合わせや動作についてまとめましょう）</span>
        <%= f.text_area :body, 'data-provider': :summernote %>
      </div>
      <div class="btn-area text-right">
        <%= f.submit '変更する', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
