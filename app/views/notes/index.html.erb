<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h2>ノート一覧</h2>
      <%= link_to "ノートを書く", new_note_path, class: "btn btn-success" %>
    </div>
    <div class="col-xs-offset-5 col-xs-3">
      <%= form_tag(search_notes_path, :method => 'get' ) do %>
      <%= text_field_tag :search, '', placeholder: "筋肉名を入力" %>
      <%= submit_tag '検索する', :name => nil, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>ノート名</th>
        <th>筋肉名</th>
        <th>内容</th>
        <th>作成者</th>
        <th>作成日時</th>
      </tr>
    </thead>
    <tbody>
      <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note_path(note.id) %></td>
        <td><%= note.name %></td>
        <td><%= note.body.html_safe %></td>
        <td><%= note.user.name %></td>
        <td><%= note.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="paginate-area text-center">
    <%= paginate @notes %>
  </div>
</div>
