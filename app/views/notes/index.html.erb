<div class="container">
  <h2>ノート一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>ノート名</th>
        <th>筋肉名</th>
        <th>内容</th>
        <th>作成者</th>
        <th>作成日時</th>
      </tr>
    </thead>
    <tbody>
      <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note_path(note.id) %></td>
        <td><%= note.name %></td>
        <td><%= note.body.html_safe %></td>
        <td><%= note.user.name %></td>
        <td><%= note.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
